<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BmiCalculatorActivity"
    tools:showIn="@layout/app_bar_bmi_calculator"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3">
            <TextView
                android:text="AGE"
                style="@style/bmi_textViewStyle1"
                android:layout_row="0"
                android:layout_column="0"/>
            <TextView
                android:text="HEIGHT"
                style="@style/bmi_textViewStyle1"
                android:layout_row="1"
                android:layout_column="0"/>
            <TextView
                android:text="WEIGHT"
                style="@style/bmi_textViewStyle1"
                android:layout_row="2"
                android:layout_column="0"/>
            <EditText
                android:id="@+id/ageEditText"
                style="@style/bmi_editViewStyle1"
                android:layout_row="0"
                android:layout_column="1"/>
            <EditText
                android:id="@+id/heightEditText"
                style="@style/bmi_editViewStyle1"
                android:layout_row="1"
                android:layout_column="1"/>
            <EditText
                android:id="@+id/heightEditText_secondary"
                style="@style/bmi_editViewStyle1"
                android:layout_row="1"
                android:layout_column="2"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/weightEditText"
                style="@style/bmi_editViewStyle1"
                android:layout_row="2"
                android:layout_column="1"/>
            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>
            <Spinner
                android:id="@+id/heightSpinner"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>
            <Spinner
                android:id="@+id/weightSpinner"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>

        </GridLayout>

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3"
            android:id="@+id/result_gridLayout">
            <TextView
                android:text="BMI"
                android:id="@+id/bmiHeading"
                style="@style/bmi_textViewStyle2"
                android:layout_row="0"
                android:layout_column="0"/>
            <TextView
                android:text="IDEAL WEIGHT"
                android:id="@+id/idealWeightHeading"
                style="@style/bmi_textViewStyle2"
                android:layout_row="0"
                android:layout_column="1"/>
            <TextView
                android:text="FAT"
                android:id="@+id/fatHeading"
                style="@style/bmi_textViewStyle2"
                android:layout_row="0"
                android:layout_column="2"/>
            <TextView
                android:text="\?\?"
                android:id="@+id/bmiValue"
                style="@style/bmi_textViewStyle3"
                android:layout_row="1"
                android:layout_column="0"/>
            <TextView
                android:text="\?\?"
                android:id="@+id/idealWeightValue"
                style="@style/bmi_textViewStyle3"
                android:layout_row="1"
                android:layout_column="1"/>
            <TextView
                android:text="\?\?"
                android:id="@+id/fatValue"
                style="@style/bmi_textViewStyle3"
                android:layout_row="1"
                android:layout_column="2"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmiClassification"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            />
        <GridLayout
            android:id="@+id/bmiCategories_gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="8"
            android:columnCount="2">
        </GridLayout>

    </LinearLayout>
</ScrollView>
